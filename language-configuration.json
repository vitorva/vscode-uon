{
    "comments": {
        "lineComment": "#",
    },
    "brackets": [
        ["[", "]"],
        ["{", "}"],
        ["(", ")"],
        ["@(", ")"],
        ["@@(", ")"],
        ["!@(", ")"],
        ["<", ">"],
      ],
      "autoClosingPairs": [
        ["[", "]"],
        ["{", "}"],
        ["(", ")"],
        ["<", ">"],
        ["/", "/"],
        ["$", "$"],
        ["\"", "\""],      
        ["'", "'"],
        ["`", "`"]
      ],
      "surroundingPairs": [
        ["[", "]"],
        ["{", "}"],
        ["(", ")"],
        ["<", ">"],
        ["/", "/"],
        ["$", "$"],
        ["\"", "\""],      
        ["'", "'"],
        ["`", "`"]
      ],
      // Indentation-based folding
      "folding": {
        "offSide": true,
        "markers": {
          "start": "^\\s*#\\s*region\\b",
          "end": "^\\s*#\\s*endregion\\b"
        }
      },
      // yaml
      "indentationRules": {
        "increaseIndentPattern": "^\\s*.*(:|-) ?(&amp;\\w+)?(\\{[^}\"']*|\\([^)\"']*)?$",
        "decreaseIndentPattern": "^\\s+\\}$"
      },
      "wordPattern": "(^.?[^\\s]+)+|([^\\s\n={[][\\w\\-\\.\/$%&*:\"']+)"
}